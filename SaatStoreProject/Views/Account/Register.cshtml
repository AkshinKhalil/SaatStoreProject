@model RegisterVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SaatStore Registrasiya</title>
    <link rel="stylesheet" href="~/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/base/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/assets/images/index/logo-new.png" alt="logo">
                            </div>
                            <h6 class="font-weight-light">Qeydiyyatdan keçmək asandır. Bu, yalnız bir neçə addım tələb edir</h6>
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input asp-for="Fullname"  class="form-control form-control-lg" placeholder="Tam adı"><br />
                                    <span class="text-danger text" asp-validation-for="Fullname"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Username" class="form-control form-control-lg" placeholder="İstifadəçi adı"><br />
                                    <span class="text-danger text" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="E-poçt"><br />
                                    <span class="text-danger text" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Şifrə"><br />
                                    <span class="text-danger text" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Şifrənin təsdiqi"><br />
                                    <span class="text-danger text" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input asp-for="Terms" class="form-check-input">
                                            Mən bütün Qaydalar və Şərtlərlə razıyam
                                        </label>
                                        <span class="text text-danger" asp-validation-for="Terms"></span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">QEYDİYYATDAN KEÇMƏK</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Artıq bir hesabınız var mı? <a asp-controller="account" asp-action="login" class="text-primary">Daxil ol</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/assets/vendors/base/vendor.bundle.base.js"></script>
    <script src="~/admin/assets/js/off-canvas.js"></script>
    <script src="~/admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/admin/assets/js/template.js"></script>
</body>

</html>