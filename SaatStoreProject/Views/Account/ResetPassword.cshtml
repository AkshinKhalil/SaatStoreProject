@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
}
<div class="container">
    <h2>Parolun sıfırlanması bölməsi</h2>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post">
        <div>
            <label>Zəhmət olmasa yeni parolunuzu daxil edin</label><br />
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="d-none">
            <input asp-for="Token" class="form-control" />
            <input asp-for="AppUser.Email" class="form-control" />
        </div>
        <div>
            <label>Yeni parolunuzu təsdiqləyin</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-primary">Parolu sıfırlamaq</button>
    </form>
</div>