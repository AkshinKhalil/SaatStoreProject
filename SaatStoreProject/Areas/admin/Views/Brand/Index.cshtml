@model List<Brand>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="mt-2 d-flex" style="justify-content:flex-end">
        <a asp-controller="brand" asp-action="create" class="btn btn-success btn-icon-text">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>
    <table class="mt-3 table table-dark">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Brand image
                </th>
                <th>
                   Brand Name
                </th>
                <th>
                    Watch Count
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Brand brand in Model)
            {
            <tr>
                <td>
                    @brand.Id
                </td>
                    <td>
                        <img style="width:100px;height:100px;object-fit:contain" src="~/assets/images/brand/@brand.Image" alt="brand image" />
                    </td>
                <td>
                    @brand.Name
                </td>
                    <td>
                         @brand.Watch.Count()
                    </td>  
                <td>
                    <a asp-controller="brand" asp-action="edit" asp-route-id="@brand.Id" class="btn btn-warning btn-icon-text">
                        <i class="mdi mdi-file-check btn-icon-append"></i>
                        Edit
                    </a>
                    <a asp-controller="brand" asp-action="delete" asp-route-id="@brand.Id" class="btn btn-danger btn-icon-text delete-item">
                        <i class="mdi mdi-alert btn-icon-prepend"></i>
                        Delete
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-item").click(function (e) {
            e.preventDefault()
            console.log($(this).attr("href"))
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        } else {
                            Swal.fire(
                                'Not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }
                    );
                }
            })
        })
    </script>
}