@model LoginVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Fiorello login</title>
    <link rel="stylesheet" href="~/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/base/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/admin/assets/images/logo.svg" alt="logo">
                            </div>
                            <h4>Admin panel</h4>
                             <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <h6 class="font-weight-light">Dəvam etmək üçün daxil olun.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                             <input asp-for="Username" class="form-control form-control-lg" placeholder="İstifadəçi adı"><br />
                                    <span class="text text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Parol"><br />
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >DAXİL OLUN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input asp-for="RememberMe" class="form-check-input">
                                            Məni hesaba daxil edin
                                        </label>
                                    </div>
                                    <a asp-controller="account" asp-action="forgotpassword" class="auth-link text-black">Şifrəni unutmusunuz?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız yoxdur? <a asp-controller="account" asp-action="register" class="text-primary">Yaradın</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/assets/vendors/base/vendor.bundle.base.js"></script>
    <script src="~/admin/assets/js/off-canvas.js"></script>
    <script src="~/admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/admin/assets/js/template.js"></script>
</body>

</html>