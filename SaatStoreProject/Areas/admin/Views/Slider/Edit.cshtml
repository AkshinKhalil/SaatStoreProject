@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-3">
    <h2>Edit slider section</h2>
    <div class="mt-3">
        <h4>Current slider image</h4>
        <img style="width:300px;height:300px;object-fit:contain" src="~/assets/images/index/@Model.Image" alt="slider image" />
    </div>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Select image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Slider title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SubTitle" class="form-label">Slider subtitle</label>
            <input asp-for="@Model.SubTitle" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.SubTitle"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>